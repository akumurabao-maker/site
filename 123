  <script>
    // Floating blobs animation (mouse + time)
    const b1 = document.getElementById('blob1');
    const b2 = document.getElementById('blob2');
    const b3 = document.getElementById('blob3');

    let mx = 0, my = 0;
    window.addEventListener('mousemove', (e) => {
      const x = e.clientX / window.innerWidth - 0.5;
      const y = e.clientY / window.innerHeight - 0.5;
      mx = x * 60;
      my = y * 60;
    }, { passive: true });

    function placeInitial() {
      const w = window.innerWidth;
      const h = window.innerHeight;
      b1.style.left = Math.max(-80, w * 0.10) + 'px';
      b1.style.top  = Math.max(-120, h * 0.05) + 'px';

      b2.style.left = Math.max(-120, w * 0.65) + 'px';
      b2.style.top  = Math.max(-120, h * 0.08) + 'px';

      b3.style.left = Math.max(-120, w * 0.45) + 'px';
      b3.style.top  = Math.max(-140, h * 0.62) + 'px';
    }
    placeInitial();
    window.addEventListener('resize', placeInitial, { passive:true });

    const start = performance.now();
    function tick(t) {
      const s = (t - start) / 1000;

      const p1x = Math.sin(s * 0.60) * 26 + mx * 0.55;
      const p1y = Math.cos(s * 0.55) * 22 + my * 0.50;

      const p2x = Math.cos(s * 0.50) * 28 + mx * 0.35;
      const p2y = Math.sin(s * 0.65) * 24 + my * 0.30;

      const p3x = Math.sin(s * 0.45 + 1.7) * 30 + mx * 0.25;
      const p3y = Math.cos(s * 0.58 + 1.1) * 26 + my * 0.22;

      b1.style.transform = `translate3d(${p1x}px, ${p1y}px, 0)`;
      b2.style.transform = `translate3d(${p2x}px, ${p2y}px, 0)`;
      b3.style.transform = `translate3d(${p3x}px, ${p3y}px, 0)`;

      requestAnimationFrame(tick);
    }
    requestAnimationFrame(tick);

    // Reveal on scroll
    const io = new IntersectionObserver((entries) => {
      for (const e of entries) {
        if (e.isIntersecting) e.target.classList.add('in');
      }
    }, { threshold: 0.12 });

    document.querySelectorAll('.reveal').forEach(el => io.observe(el));

    // Year
    document.getElementById('year').textContent = new Date().getFullYear();

    // "Command palette" joke: Cmd+K scrolls to about section
    window.addEventListener('keydown', (e) => {
      const isCmdK = (e.metaKey || e.ctrlKey) && (e.key.toLowerCase() === 'k');
      if (isCmdK) {
        e.preventDefault();
        document.querySelector('#about').scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  </script>
</body>
